<Page x:Class="NBApp.Pages.TeamsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NBApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TeamsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30px"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="Back" Width="100" HorizontalAlignment="Left" Click="BackButton_Click"/>
        <Button HorizontalAlignment="Left" Margin="200 0 0 0" Width="200" Content="Eastern teams" Click="EasternButton_Click"/>
        <Button HorizontalAlignment="Left" Margin="500 0 0 0" Width="200" Content="Western teams" Click="WesternButton_Click"/>
        <Frame x:Name="TeamsFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
